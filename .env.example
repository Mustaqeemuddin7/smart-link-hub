# Smart Link Hub - Environment Configuration

# ===================
# Backend Settings
# ===================

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smartlinkhub

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
DEBUG=true
APP_NAME=Smart Link Hub
APP_VERSION=1.0.0

# CORS Origins (comma-separated for production)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
PUBLIC_RATE_LIMIT_PER_MINUTE=300

# ===================
# Optional: Redis
# ===================
# REDIS_URL=redis://localhost:6379

# ===================
# Frontend Settings
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
