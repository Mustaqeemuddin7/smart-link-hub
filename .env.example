# Smart Link Hub - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================
# Backend Settings
# ===================

# Database (PostgreSQL) - Replace with your database credentials
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/smartlinkhub

# JWT Authentication - IMPORTANT: Generate a secure key!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
DEBUG=true
APP_NAME=Smart Link Hub
APP_VERSION=1.0.0

# CORS Origins (comma-separated for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
PUBLIC_RATE_LIMIT_PER_MINUTE=300

# URLs
APP_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3001

# ===================
# Optional: Redis
# ===================
# REDIS_URL=redis://localhost:6379

# ===================
# Frontend Settings
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_URL=http://localhost:3001

